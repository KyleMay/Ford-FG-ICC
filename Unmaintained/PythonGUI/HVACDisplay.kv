<MyLayout>:
	orientation: 'horizontal'
	BoxLayout:
		size_hint: (.2, 1)
		orientation: 'vertical'
		canvas:
			Color:
				rgb: .3, .3, .3
			Rectangle:
				size: self.size
		Label:
			text: root.time
			font_size: 50
			size_hint_y: 0.2

		BoxLayout:
			orientation: 'vertical'
			width: 128
			size_hint_x: None
			pos_hint: {'x': 0.25}

			Image:
				source: root.recirculation_source
			Image:
				source: root.ac_source
				width: self.parent.width
			Image:
				source: root.rear_demist_source
	BoxLayout:
		orientation: 'horizontal'
		Image:
			source: root.requested_temperature_source
			size_hint_y: None
			height: 550
			allow_stretch: True
			pos_hint: {'y': 0.15}


			Label:
				id: temperature_label
				center: root.center_x - 190, root.center_y - 20
				text: root.requested_temperature_string
				font_size: 150

		Image:
			source: root.vent_source
